<h1 class="mb-1 restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurant.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurant.location }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurant.phone }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-grin-hearts pr-2"></i>
          心得：
        </span>
        {{ restaurant.description }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-heart pr-2"></i>
          評價：
        </span>
        {{ restaurant.rating }}
      </p>

      <p class="map">
        <span class="text-secondary">
          <i class="fas fa-map-marked-alt pr-2"></i>
          Google Map：
        </span>
          <iframe class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.google_map }}" style="width="600" height="450"border:0;" allowfullscreen="" loading="lazy">
          </iframe>
      </p>
     
      
    </div>
  </div>
</div>

